  <div class="container mx-auto my-6">
    <a href="<%= resumes_path%>" class="inline-flex items-center bg-gray-100 border-0 py-1 px-6 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 md:mt-0"><svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 mr-1" viewBox="0 0 24 24">
    <path d="M19 12H5m7-7l-7 7 7 7"></path>
    </svg>Go Back</a>
  </div>
  
  <section class="text-gray-600 body-font relative">
  <div class="container px-5 py-24 mx-auto">

    <!-- Header -->
    <div class="flex flex-col text-center w-full mb-12">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">
        Create a new resume
      </h1>
      <p class="lg:w-2/3 mx-auto leading-relaxed text-base text-gray-500">
        Start with a title and template. You can add sections later.
      </p>
    </div>

    <!-- Form -->
    <div class="lg:w-1/2 md:w-2/3 mx-auto">
      <%= form_with model: @resume, class: "flex flex-wrap -m-2" do |f| %>

        <!-- Title -->
        <div class="p-2 w-full">
          <div class="relative">
            <%= f.label :title, class: "leading-7 text-sm text-gray-600" %>
            <%= f.text_field :title,
                class: "w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300
                        focus:border-gray-900 focus:bg-white focus:ring-2 focus:ring-gray-200
                        text-base outline-none text-gray-700 py-1 px-3 leading-8
                        transition-colors duration-200 ease-in-out" %>
          </div>
        </div>

        <!-- Template -->
        <div class="p-2 w-full">
          <div class="relative">
            <%= f.label :template, class: "leading-7 text-sm text-gray-600" %>
            <%= f.select :template,
                [["Minimal", "minimal"], ["Modern", "modern"]],
                {},
                class: "w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300
                        focus:border-gray-900 focus:bg-white focus:ring-2 focus:ring-gray-200
                        text-base outline-none text-gray-700 py-2 px-3 leading-8
                        transition-colors duration-200 ease-in-out" %>
          </div>
        </div>

        <div class="p-2 w-full">
          <label class="group flex items-center gap-3 cursor-pointer text-sm text-gray-700">
            <%= f.check_box :active,
              class: "
                h-5 w-5
                rounded-md
                border border-gray-300
                text-gray-900
                cursor-pointer
              " %>

            <span class="group-hover:text-gray-900">
              Set as active resume
            </span>
          </label>
        </div>

        <!-- Submit -->
        <div class="p-2 w-full">
          <%= f.submit @resume.persisted? ? "Update Resume" : "Create Resume",
              class: "cursor-pointer flex mx-auto text-white bg-gray-900 border-0
                      py-2 px-8 focus:outline-none hover:bg-gray-800
                      rounded text-lg" %>
        </div>

      <% end %>
    </div>
  </div>
</section>

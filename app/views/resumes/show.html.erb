<!-- Main Content -->
<div class="flex gap-6 mx-auto max-w-[1400px] px-6">
  
  <!-- Left Sidebar - Forms -->
  <div class="w-full lg:w-[45%] xl:w-[40%] flex flex-col gap-5 overflow-y-auto max-h-[calc(100vh-120px)] pr-2">

    <!-- Profile Details Form -->
    <div class="group bg-white rounded-2xl border border-gray-200 shadow-sm">
      <span class="list-none px-6 py-4 flex items-center justify-between rounded-2xl transition-colors">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900">Profile</h3>
        </div>
      </span>

      <div class="px-6 pb-6">
        <%= form_with model: @profile, url: resume_profile_path(@resume), local: true, class: "space-y-4" do |f| %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= f.label :name, "Full Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all" %>
            </div>
            <div>
              <%= f.label :profession, "Job Title", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :profession, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all" %>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :email, type: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all" %>
            </div>
            <div>
              <%= f.label :phone, "Phone", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :phone, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all" %>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= f.label :location, "Location", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :location, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all" %>
            </div>
            <div>
              <%= f.label :website, "Website (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :website, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all" %>
            </div>
          </div>

          <div>
            <%= f.label :description, "About", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all resize-none" %>
          </div>

          <%= f.submit "Save Changes", class: "w-full bg-gray-900 hover:bg-gray-800 text-white font-medium py-2.5 px-4 rounded-lg transition-colors cursor-pointer" %>
        <% end %>
      </div>
    </div>

    <!-- Professional Experience Section -->
    <details class="group bg-white rounded-2xl border border-gray-200 shadow-sm">
      <summary class="cursor-pointer list-none px-6 py-4 flex items-center justify-between hover:bg-gray-50 rounded-2xl transition-colors">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900">Professional Experience</h3>
        </div>
        <svg class="w-5 h-5 text-gray-400 transition-transform group-open:rotate-180"
          fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M19 9l-7 7-7-7" />
        </svg>
      </summary>

      <div class="px-6 pb-6 space-y-4">
        <%= form_with model: [@resume, @experience], local: true do |f| %>

          <div class="mb-4">
            <%= f.label :company, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :company,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg
                      focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all" %>
          </div>

          <div class="mb-4">
            <%= f.label :role, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :role,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg
                      focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all" %>
          </div>

          <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
              <%= f.label :start_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.date_field :start_date,
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg
                        focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all" %>
            </div>

            <div>
              <%= f.label :end_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.date_field :end_date,
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg
                        focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all" %>
            </div>
          </div>

          <div>
            <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :description, rows: 4,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg
                      focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all resize-none" %>
          </div>

          <%= f.submit @experience.persisted? ? "Update Experience" : "Add Experience", class: "w-full bg-gray-900 hover:bg-gray-800 text-white font-medium py-2.5 px-4 rounded-lg transition-colors cursor-pointer" %>

        <% end %>
      </div>

      <!--- Fetch the current experiences with edit/delete buttons --->
      <% if @resume.experiences.any? %>
        <div class="my-6 space-y-3 mx-4">
          <% @resume.experiences.order(start_date: :desc).each do |experience| %>
            <div class="border border-gray-200 rounded-lg p-4 shadow">
              <div class="flex justify-between items-start">
                <div>
                  <p class="font-semibold text-gray-900">
                    <%= experience.role %>
                  </p>
                  <p class="text-sm text-gray-600">
                    <%= experience.company %>
                  </p>
                  <p class="text-xs text-gray-500 mt-1">
                    <%= experience.start_date&.strftime("%b %Y") %> –
                    <%= experience.end_date&.strftime("%b %Y") || "Present" %>
                  </p>
                </div>

                <div class="flex gap-3 text-sm">
                  <%= link_to "Edit",
                    resume_path(@resume, edit_experience_id: experience.id),
                    class: "text-blue-600 hover:underline" %>

                  <%= link_to "Delete",
                    resume_experience_path(@resume, experience),
                    data: { turbo_method: :delete },
                    class: "text-red-600 hover:underline" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

    </details>


    <!-- Education Section -->
    <details class="group bg-white rounded-2xl border border-gray-200 shadow-sm">
      <summary class="cursor-pointer list-none px-6 py-4 flex items-center justify-between hover:bg-gray-50 rounded-2xl transition-colors">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900">Education</h3>
        </div>
        <svg class="w-5 h-5 text-gray-400 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </summary>

      <div class="px-6 pb-6 space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Institution</label>
          <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Degree</label>
          <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all">
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
            <input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
            <input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all">
          </div>
        </div>
        <button class="w-full bg-gray-900 hover:bg-gray-800 text-white font-medium py-2.5 px-4 rounded-lg transition-colors">
          Save Education
        </button>
      </div>
    </details>

    <!-- Core Skills Section -->
    <details class="group bg-white rounded-2xl border border-gray-200 shadow-sm">
      <summary class="cursor-pointer list-none px-6 py-4 flex items-center justify-between hover:bg-gray-50 rounded-2xl transition-colors">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900">Core Skills</h3>
        </div>
        <svg class="w-5 h-5 text-gray-400 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </summary>

      <div class="px-6 pb-6">
        <%= form_with model: [@resume, Skill.new], local: true, class: "space-y-4" do |f| %>
          <div>
            <%= f.label :name, "Skill Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name, placeholder: "e.g., SEO Content Writing", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all" %>
          </div>
          <%= f.submit "Add Skill", class: "w-full bg-gray-900 hover:bg-gray-800 text-white font-medium py-2.5 px-4 rounded-lg transition-colors cursor-pointer" %>
        <% end %>

        <% if @resume.skills.any? %>
          <div class="flex flex-wrap gap-2 mt-4">
            <% @resume.skills.each do |skill| %>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">
                <%= skill.name %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </details>

    <!-- Achievements Section -->
    <details class="group bg-white rounded-2xl border border-gray-200 shadow-sm mb-8">
      <summary class="cursor-pointer list-none px-6 py-4 flex items-center justify-between hover:bg-gray-50 rounded-2xl transition-colors">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900">Achievements</h3>
        </div>
        <svg class="w-5 h-5 text-gray-400 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </summary>

      <div class="px-6 pb-6 space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Achievement Title</label>
          <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <textarea rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent outline-none transition-all resize-none"></textarea>
        </div>
        <button class="w-full bg-gray-900 hover:bg-gray-800 text-white font-medium py-2.5 px-4 rounded-lg transition-colors">
          Save Achievement
        </button>
      </div>
    </details>

  </div>

  <!-- Right Side - Resume Preview (Hidden on mobile) -->
  <div class="hidden lg:flex flex-1 justify-center overflow-y-auto max-h-[calc(100vh-120px)] bg-gray-50 rounded-xl" id="resumePreview">
    <div class="bg-white shadow-lg border border-gray-200" style="width: 210mm; height: fit-content; min-height: 297mm;">
      <div class="px-16 py-12">
        
        <!-- Header -->
        <% if (profile = @resume.profile) %>
          <header class="mb-8">
            <div class="flex justify-between items-start">
              <div>
                <h1 class="text-4xl font-bold text-gray-900"><%= profile.name || "Your Name" %></h1>
                <p class="text-lg text-gray-600 mt-1 italic"><%= profile.profession || "Your Profession" %></p>
              </div>
            </div>
            
            <div class="grid grid-cols-2 gap-x-8 gap-y-1 mt-4 text-sm">
              <% if profile.email.present? %>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
                  <span><%= profile.email %></span>
                </div>
              <% end %>
              
              <% if profile.phone.present? %>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
                  <span><%= profile.phone %></span>
                </div>
              <% end %>
              
              <% if profile.location.present? %>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path></svg>
                  <span><%= profile.location %></span>
                </div>
              <% end %>
              
              <% if profile.website.present? %>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd"></path></svg>
                  <span><%= profile.website %></span>
                </div>
              <% end %>
            </div>
          </header>
        <% end %>

        <!-- Profile/About -->
        <% if @resume.profile&.description.present? %>
          <section class="mb-8">
            <h2 class="text-xl font-bold text-gray-900 border-b-2 border-gray-900 pb-2 mb-4">Profile</h2>
            <p class="text-sm text-gray-700 leading-relaxed"><%= @resume.profile.description %></p>
          </section>
        <% end %>

        <!-- Professional Experience -->
        <% if @resume.experiences.any? %>
          <section class="mb-8">
            <h2 class="text-xl font-bold text-gray-900 border-b-2 border-gray-900 pb-2 mb-4">Professional Experience</h2>
            
            <% @resume.experiences.each do |exp| %>
              <div class="mb-6">
                <div class="flex justify-between items-start mb-2">
                  <div>
                    <h3 class="font-bold text-gray-900"><%= exp.role %></h3>
                    <p class="text-sm italic text-gray-700"><%= exp.company %></p>
                  </div>
                  <div class="text-sm text-gray-600">
                    <%= exp.start_date&.strftime("%m/%Y") || "Present" %> – <%= exp.end_date&.strftime("%m/%Y") || "Present" %>
                  </div>
                </div>
                <% if exp.description.present? %>
                  <p class="text-sm text-gray-700 leading-relaxed"><%= exp.description %></p>
                <% end %>
              </div>
            <% end %>
          </section>
        <% end %>

        <!-- Education -->
        <% if @resume.educations.any? %>
          <section class="mb-8">
            <h2 class="text-xl font-bold text-gray-900 border-b-2 border-gray-900 pb-2 mb-4">Education</h2>
            
            <% @resume.educations.each do |edu| %>
              <div class="mb-4">
                <div class="flex justify-between items-start">
                  <div>
                    <h3 class="font-bold text-gray-900"><%= edu.degree %></h3>
                    <p class="text-sm italic text-gray-700"><%= edu.institution %></p>
                  </div>
                  <div class="text-sm text-gray-600">
                    <%= edu.start_date&.year %> – <%= edu.end_date&.year || "Present" %>
                  </div>
                </div>
              </div>
            <% end %>
          </section>
        <% end %>

        <!-- Core Skills -->
        <% if @resume.skills.any? %>
          <section class="mb-8">
            <h2 class="text-xl font-bold text-gray-900 border-b-2 border-gray-900 pb-2 mb-4">Core Skills</h2>
            
            <div class="grid grid-cols-2 gap-x-8 gap-y-2">
              <% @resume.skills.each do |skill| %>
                <div class="flex items-center gap-2 text-sm">
                  <span class="flex gap-1">
                    <% 4.times do %>
                      <span class="w-2 h-2 bg-gray-900 rounded-full"></span>
                    <% end %>
                    <span class="w-2 h-2 bg-gray-300 rounded-full"></span>
                  </span>
                  <span class="text-gray-700"><%= skill.name %></span>
                </div>
              <% end %>
            </div>
          </section>
        <% end %>

        <!-- Projects -->
        <% if @resume.projects.any? %>
          <section class="mb-8">
            <h2 class="text-xl font-bold text-gray-900 border-b-2 border-gray-900 pb-2 mb-4">Achievements</h2>
            
            <ul class="space-y-2">
              <% @resume.projects.each do |project| %>
                <li class="text-sm text-gray-700">
                  <span class="font-semibold"><%= project.name %>:</span> <%= project.description %>
                </li>
              <% end %>
            </ul>
          </section>
        <% end %>

      </div>
    </div>
  </div>

</div>

<!-- Floating Preview Button (Mobile Only) -->
<button 
  onclick="openResumeModal()"
  class="lg:hidden fixed bottom-6 right-6 w-14 h-14 bg-pink-500 hover:bg-pink-600 text-white rounded-full shadow-lg flex items-center justify-center transition-all z-50">
  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
  </svg>
</button>

<!-- Mobile Resume Preview Modal -->
<div id="resumeModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden lg:hidden">
  <div class="h-full flex flex-col bg-white">
    <div class="flex items-center justify-between p-4 border-b border-gray-200 bg-white">
      <h3 class="font-semibold text-gray-900">Resume Preview</h3>
      <button onclick="closeResumeModal()" class="p-2 hover:bg-gray-100 rounded-lg">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <div class="flex-1 overflow-y-auto p-4 bg-gray-50">
      <div class="bg-white shadow-lg border border-gray-200 mx-auto" style="max-width: 210mm;">
        <div class="px-8 py-8 text-xs">
          
          <!-- Mobile Preview Content (Same as desktop but smaller) -->
          <% if (profile = @resume.profile) %>
            <header class="mb-6">
              <h1 class="text-2xl font-bold text-gray-900"><%= profile.name || "Your Name" %></h1>
              <p class="text-sm text-gray-600 mt-1 italic"><%= profile.profession || "Your Profession" %></p>
              
              <div class="grid grid-cols-1 gap-1 mt-3 text-xs">
                <% if profile.email.present? %>
                  <div class="flex items-center gap-2">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
                    <span><%= profile.email %></span>
                  </div>
                <% end %>
                
                <% if profile.phone.present? %>
                  <div class="flex items-center gap-2">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
                    <span><%= profile.phone %></span>
                  </div>
                <% end %>
                
                <% if profile.location.present? %>
                  <div class="flex items-center gap-2">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path></svg>
                    <span><%= profile.location %></span>
                  </div>
                <% end %>
              </div>
            </header>
          <% end %>

          <% if @resume.profile&.description.present? %>
            <section class="mb-6">
              <h2 class="text-base font-bold text-gray-900 border-b-2 border-gray-900 pb-1 mb-3">Profile</h2>
              <p class="text-xs text-gray-700 leading-relaxed"><%= @resume.profile.description %></p>
            </section>
          <% end %>

          <% if @resume.experiences.any? %>
            <section class="mb-6">
              <h2 class="text-base font-bold text-gray-900 border-b-2 border-gray-900 pb-1 mb-3">Professional Experience</h2>
              
              <% @resume.experiences.each do |exp| %>
                <div class="mb-4">
                  <div class="flex justify-between items-start mb-1">
                    <div>
                      <h3 class="font-bold text-gray-900 text-sm"><%= exp.role %></h3>
                      <p class="text-xs italic text-gray-700"><%= exp.company %></p>
                    </div>
                    <div class="text-xs text-gray-600">
                      <%= exp.start_date&.strftime("%m/%Y") || "Present" %> – <%= exp.end_date&.strftime("%m/%Y") || "Present" %>
                    </div>
                  </div>
                  <% if exp.description.present? %>
                    <p class="text-xs text-gray-700 leading-relaxed"><%= exp.description %></p>
                  <% end %>
                </div>
              <% end %>
            </section>
          <% end %>

          <% if @resume.skills.any? %>
            <section class="mb-6">
              <h2 class="text-base font-bold text-gray-900 border-b-2 border-gray-900 pb-1 mb-3">Core Skills</h2>
              <div class="flex flex-wrap gap-2">
                <% @resume.skills.each do |skill| %>
                  <span class="px-2 py-1 bg-gray-100 text-gray-700 rounded text-xs"><%= skill.name %></span>
                <% end %>
              </div>
            </section>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function openResumeModal() {
    document.getElementById('resumeModal').classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeResumeModal() {
    document.getElementById('resumeModal').classList.add('hidden');
    document.body.style.overflow = 'auto';
  }
</script>

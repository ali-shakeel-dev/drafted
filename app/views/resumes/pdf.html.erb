<div id="resume_container">

  <% if (profile = @resume.profile) %>
    <header id="resume_header">

      <div id="header_left">
        <h1 class="profile_name"><%= profile.name %></h1>
        <p class="profile_profession"><%= profile.profession %></p>
      </div>

      <div id="header_right">

        <% if profile.location.present? %>
          <p class="profile_meta">
            <%= profile.location %>
          </p>
        <% end %>

        <% if profile.email.present? %>
          <p class="profile_meta">
            <%= profile.email %>
          </p>
        <% end %>

        <% if profile.phone.present? %>
          <p class="profile_meta">
            <%= profile.phone %>
          </p>
        <% end %>

        <% if profile.website.present? %>
          <p class="profile_meta">
            <%= profile.website %>
          </p>
        <% end %>

      </div>

    </header>
  <% end %>
  
  <!-- Profile -->
  <% if @resume.profile.present? %>
    <section id="profile_section">
      <h2 class="section_title">Profile</h2>
      <p class="section_text"><%= @resume.profile.description %></p>
    </section>
  <% end %>

  <!-- Experience -->
  <% if @resume.experiences.any? %>
    <section id="experience_section">
      <h2 class="section_title">Experience</h2>
      <% @resume.experiences.each do |exp| %>
        <div class="experience_item">
          <div class="experience_header">
            <span class="experience_role"><%= exp.role %> — <%= exp.company %></span>
            <span class="experience_dates">
              <%= exp.start_date.year %>
              <% if exp.end_date %>
                – <%= exp.end_date.year %>
              <% else %>
                – Present
              <% end %>
            </span>
          </div>
          <p class="experience_description"><%= exp.description %></p>
        </div>
      <% end %>
    </section>
  <% end %>

  <!-- Education -->
  <% if @resume.educations.any? %>
    <section id="education_section">
      <h2 class="section_title">Education</h2>
      <% @resume.educations.each do |edu| %>
        <div class="education_item">
          <p class="education_degree"><%= edu.degree %>, <%= edu.institution %></p>
          <p class="education_dates"><%= edu.start_date.year %> – <%= edu.end_date&.year %></p>
        </div>
      <% end %>
    </section>
  <% end %>

  <!-- Projects -->
  <% if @resume.projects.any? %>
    <section id="projects_section">
      <h2 class="section_title">Projects</h2>
      <% @resume.projects.each do |project| %>
        <div class="project_item">
          <p class="project_name"><%= project.name %></p>
          <p class="project_description"><%= project.description %></p>
        </div>
      <% end %>
    </section>
  <% end %>

  <!-- Skills -->
  <% if @resume.skills.any? %>
    <section id="skills_section">
      <h2 class="section_title">Skills</h2>
      <ul class="skills_list">
        <% @resume.skills.each do |skill| %>
          <li class="skill_item"><%= skill.name %></li>
        <% end %>
      </ul>
    </section>
  <% end %>
  
</div>
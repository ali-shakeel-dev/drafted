  <%= render "/components/navbar" %>

  <section class="container mx-auto px-6 py-16 lg:py-24">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 items-center">
      
      <!-- Left: Text -->
      <div class="text-center lg:text-left">
        <p class="text-xl font-medium tracking-wide text-gray-500 uppercase">
          Online Resume Builder
        </p>

        <h1 class="mt-4 text-4xl sm:text-5xl lg:text-6xl xl:text-8xl font-bold tracking-tight text-gray-900">
          Build clean, structured resumes.
        </h1>

        <p class="mt-6 text-base sm:text-lg text-gray-600 max-w-xl mx-auto lg:mx-0">
          Drafted helps you create structured resumes, manage multiple versions,
          and export professional PDFs without fighting formatting.
        </p>

        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <%= link_to "Create your resume",
              resumes_path,
              class: "inline-flex justify-center rounded-md bg-gray-900 px-6 py-3 text-white font-medium hover:bg-gray-800" %>

          <a href="#features"
            class="inline-flex justify-center rounded-md border border-gray-300 px-6 py-3 text-gray-700 font-medium hover:bg-gray-100">
            Learn more
          </a>
        </div>
      </div>

      <!-- Right: Image -->
      <div class="relative flex justify-center">
        <%= image_tag(
          "https://resumesector.com/wp-content/uploads/2024/10/Best-Resume-Template-Free-Download-MS-Word-.jpg",
          alt: "Drafted resume preview",
          class: "w-full max-w-sm sm:max-w-md lg:max-w-lg rounded-lg border shadow-sm"
        ) %>
      </div>
    </div>
  </section>

  <section id="features" class="border-t border-gray-300">
  <div class="container mx-auto px-6 py-16 grid grid-cols-1 md:grid-cols-3 gap-10">
    
      <div>
        <h3 class="text-base font-semibold text-gray-900">
          Structured data
        </h3>
        <p class="mt-2 text-sm text-gray-600">
          Experiences, education, skills, and projects are stored as structured data —
          not messy text blocks.
        </p>
      </div>

      <div>
        <h3 class="text-base font-semibold text-gray-900">
          Multiple versions
        </h3>
        <p class="mt-2 text-sm text-gray-600">
          Create different resume versions for different roles without duplicating work.
        </p>
      </div>

      <div>
        <h3 class="text-base font-semibold text-gray-900">
          PDF export
        </h3>
        <p class="mt-2 text-sm text-gray-600">
          Generate clean, professional PDFs using predefined templates.
        </p>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="border-t border-gray-300">
    <div class="container mx-auto px-6 py-6 text-xs sm:text-sm text-gray-500 text-center">
      © <%= Time.current.year %> Drafted — Resume Builder
    </div>
  </footer>

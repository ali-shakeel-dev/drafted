<!-- app/views/home/index.html.erb -->
<div class="min-h-screen bg-gray-50">
  <!-- Navbar -->
  <header class="border-b bg-white">
    <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
      <span class="text-xl font-bold tracking-tight text-gray-900">Drafted</span>

      <div class="space-x-4">
        <% if user_signed_in? %>
          <%= link_to "Dashboard", resumes_path, class: "text-sm font-medium text-gray-700 hover:text-gray-900" %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
          <%= link_to "Get started", new_user_registration_path,
              class: "inline-block rounded-md bg-gray-900 px-4 py-2 text-sm font-medium text-white hover:bg-gray-800" %>
        <% end %>
      </div>
    </div>
  </header>

<!-- Hero -->
<section class="max-w-6xl mx-auto px-6 py-10">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
    <!-- Left: Text -->
    <div>
      <p class="mt-6 text-lg text-gray-600">ONLINE RESUME BUILDER</p>

      <h1 class="text-6xl font-bold tracking-tight text-gray-900">
        Build clean, structured resumes.
      </h1>

      <p class="mt-6 text-lg text-gray-600">
        Drafted helps you create structured resumes, manage multiple versions,
        and export professional PDFs without fighting formatting.
      </p>

      <div class="mt-8 flex gap-4">
        <%= link_to "Create your resume",
            new_user_registration_path,
            class: "rounded-md bg-gray-900 px-6 py-3 text-white font-medium hover:bg-gray-800" %>

        <a href="#features"
           class="rounded-md border border-gray-300 px-6 py-3 text-gray-700 font-medium hover:bg-gray-100">
          Learn more
        </a>
      </div>
    </div>

    <!-- Right: Image -->
    <div class="relative flex justify-center">
      <%= image_tag "https://assets.flowcvassets.com/landing/main-landing-hero-768w.webp",
          alt: "Drafted resume preview",
          class: "h-100 rounded-lg border shadow-sm" %>
    </div>
  </div>
</section>


  <!-- Features -->
  <section id="features" class="bg-white border-t">
    <div class="max-w-6xl mx-auto px-6 py-20 grid grid-cols-1 md:grid-cols-3 gap-12">
      <div>
        <h3 class="text-lg font-semibold text-gray-900">Structured data</h3>
        <p class="mt-2 text-gray-600">
          Experiences, education, skills, and projects are stored as structured data —
          not messy text blocks.
        </p>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900">Multiple versions</h3>
        <p class="mt-2 text-gray-600">
          Create different resume versions for different roles without duplicating work.
        </p>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900">PDF export</h3>
        <p class="mt-2 text-gray-600">
          Generate clean, professional PDFs using predefined templates.
        </p>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="border-t bg-gray-50">
    <div class="max-w-6xl mx-auto px-6 py-6 text-sm text-gray-500">
      © <%= Time.current.year %> Drafted - Resume Builder

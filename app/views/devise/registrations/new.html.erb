<%= render "components/navbar" %>

<div class="container mx-auto px-5 py-24 flex sm:flex-nowrap flex-wrap">
  <div class="mx-auto lg:w-1/3 md:w-1/2 flex flex-col md:ml-auto w-full md:py-8 mt-8 md:mt-0">
    
    <h2 class="text-gray-900 text-2xl mb-1 font-medium title-font">
      Create an Account
    </h2>

    <p class="leading-relaxed mb-5 text-gray-600">
      Start building a professional resume in minutes.
    </p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="relative mb-4">
        <%= f.label :email, class: "leading-7 text-sm text-gray-600" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "w-full bg-white rounded border border-gray-300 focus:border-gray-900 focus:ring-2 focus:ring-gray-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out", placeholder: "Email" %>
      </div>

      <div class="relative mb-4">
        <%= f.label :password, class: "leading-7 text-sm text-gray-600" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-500 mb-1">
            Minimum <%= @minimum_password_length %> characters
          </p>
        <% end %>
        <span class="relative">
        <%= f.password_field :password,
              autocomplete: "new-password",
              class: "w-full bg-white rounded border border-gray-300 focus:border-gray-900 focus:ring-2 focus:ring-gray-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out", id: "password_field", placeholder: "Password" %>

        <!-- Eye icon -->
        <button
          type="button"
          class="absolute right-3 top-0 text-gray-500 hover:text-gray-700 cursor-pointer"
          id="eye_icon"
          onclick="togglePassword()"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8S1 12 1 12z" />
            <circle cx="12" cy="12" r="3" />
          </svg>
        </button>    
        </span>
      </div>

      <div class="relative mb-6">
        <%= f.label :password_confirmation, class: "leading-7 text-sm text-gray-600" %>
        <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "w-full bg-white rounded border border-gray-300 focus:border-gray-900 focus:ring-2 focus:ring-gray-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out", id: "confirm_password_field", placeholder: "Confirm Password" %>
      </div>

      <%= f.submit "Sign up",
            class: "cursor-pointer text-white bg-gray-900 border-0 py-2 px-6 w-full focus:outline-none hover:bg-gray-700 rounded text-lg" %>

      <div class="relative mt-6">
        <p class="mb-2">Already have an account?</p> 
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>
</div>

<% content_for :login_js do %>
  <script>
    function togglePassword(){
      let password_field = document.getElementById("password_field");
      let confirm_password_field = document.getElementById("confirm_password_field");
      password_field.type = password_field.type === "password" ? "text" : "password";
      confirm_password_field.type = confirm_password_field.type === "password" ? "text" : "password";
    }
  </script>
<% end %>
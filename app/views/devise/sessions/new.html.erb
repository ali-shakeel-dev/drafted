<%= render "components/navbar" %>

<div class="container mx-auto px-5 py-24 mx-auto flex sm:flex-nowrap flex-wrap">
  <div class="mx-auto lg:w-1/3 md:w-1/2 flex flex-col md:ml-auto w-full md:py-8 mt-8 md:mt-0">
    <h2 class="text-gray-900 text-2xl mb-1 font-medium title-font">Log In</h2>
    <p class="leading-relaxed mb-5 text-gray-600">Login to build, edit, and download a job-ready resume in minutes. </p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="relative mb-4">
        <%= f.label :email, class: "leading-7 text-sm text-gray-600" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full bg-white rounded border border-gray-300 focus:border-gray-900 focus:ring-2 focus:ring-gray-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <div class="relative mb-4">
          <%= f.label :password, class: "leading-7 text-sm text-gray-600" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full bg-white rounded border border-gray-300 focus:border-gray-900 focus:ring-2 focus:ring-gray-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      </div>
      <% end %>      
      <%= f.submit "Log in", class: "cursor-pointer text-white bg-gray-900 border-0 py-1 px-6 my-4 focus:outline-none hover:bg-gray-700 rounded text-lg" %>
    <% end %>      
    <%= render "devise/shared/links" %>
  </div>
</div>